<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Input field for the numbers -->
    <EditText
        android:id="@+id/inputNumbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter numbers separated by commas"
        android:inputType="text" />

    <!-- Button to sort -->
    <Button
        android:id="@+id/sortButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort Numbers" />

    <!-- TextView to display sorted result -->
    <TextView
        android:id="@+id/sortedResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="Sorted numbers will appear here"
        android:textSize="16sp" />
</LinearLayout>
